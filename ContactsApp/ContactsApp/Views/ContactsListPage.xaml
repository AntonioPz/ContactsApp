<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
             x:Class="ContactsApp.Views.ContactsListPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salir" Command="{Binding LogoutCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ListView x:Name="ItemsListView"
                ItemsSource="{Binding People, Mode=OneWay}"
                SelectedItem="{Binding Person, Mode=TwoWay}"
                VerticalOptions="FillAndExpand"
                HasUnevenRows="true"
                CachingStrategy="RecycleElement">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="18"></RowDefinition>
                                <RowDefinition Height="30"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Source="{Binding ImageURL}" Margin="0,8"  Aspect="AspectFill"/>

                            <StackLayout Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                                <Label Text="{Binding FullName}" Font="Bold"  LineBreakMode="TailTruncation"></Label>
                                <Image  Source="onestar"  Aspect="AspectFill" Margin="10,0,0,0"/>
                                <Label Text="{Binding Rating}" LineBreakMode="TailTruncation" ></Label>
                            </StackLayout>
                            <StackLayout Grid.Row="1" Grid.Column="1" Grid.RowSpan="2">
                                 <Label Text="{Binding Email}" Font="Small"  TextColor="Gray" LineBreakMode="TailTruncation"></Label>
                                 <Label Text="{Binding Street}" Font="Small"  TextColor="Gray" LineBreakMode="TailTruncation"></Label>
                            </StackLayout>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.Behaviors>
                <b:EventToCommandBehavior EventName="ItemTapped" 
                                          Command="{Binding TapCommand}" />
            </ListView.Behaviors>
        </ListView>
    </ContentPage.Content>
</ContentPage>