<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactsApp.Views.LoginPage"
             >
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="25" VerticalOptions="Center">
            <Label HorizontalOptions="CenterAndExpand" Text="Mis Contactos" FontAttributes="Bold" FontSize="Large" Margin="0,0,0,30"/>
            <Entry Placeholder="Email" Text="{Binding Email, Mode=TwoWay}"></Entry>
            <Entry Placeholder="Password" Text="{Binding Password, Mode=TwoWay}" IsPassword="True"></Entry>
            <Button Text="Log In" TextColor="DodgerBlue" Margin="0,25,0,0" Command="{Binding LoginCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>